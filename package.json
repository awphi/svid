{
  "name": "svid",
  "version": "0.0.1",
  "description": "Minimal subtitle-focused video player",
  "private": true,
  "main": "./out/main/index.js",
  "author": "awphi (https://www.adamw.ph)",
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "pnpm run typecheck:node && pnpm run svelte-check",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "pnpm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "pnpm run build && electron-builder --win --config",
    "build:mac": "pnpm run build && electron-builder --mac --config",
    "build:linux": "pnpm run build && electron-builder --linux --config"
  },
  "dependencies": {
    "@audiowaveform-installer/audiowaveform": "^1.0.3",
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@plussub/srt-vtt-parser": "^1.1.1",
    "@trpc/client": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "cors": "^2.8.5",
    "directory-tree": "^3.5.1",
    "electron-trpc": "^0.5.2",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "pretty-ms": "^8.0.0",
    "radix-icons-svelte": "^1.2.1",
    "srt-webvtt": "^2.0.0",
    "svelte-persisted-store": "^0.9.0",
    "svelte-splitpanes": "^0.8.0",
    "waveform-data": "^4.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ffprobe-static": "^2.0.3",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^18.19.5",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.1",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}
